<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsAdderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addquestions_toolbar"
        android:background="#262433"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
    <EditText
        android:id="@+id/questionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your question"
        android:padding="12dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        />

    <EditText
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option A"
        android:padding="12dp"
        android:layout_marginHorizontal="20dp"
        />
    <EditText
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option B"
        android:padding="12dp"
        android:layout_marginHorizontal="20dp"
        />
    <EditText
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option C"
        android:padding="12dp"
        android:layout_marginHorizontal="20dp"
        />
    <EditText
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option D"
        android:padding="12dp"
        android:layout_marginHorizontal="20dp"
        />
    <EditText
        android:id="@+id/correctAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correct Answer"
        android:padding="12dp"
        android:inputType="number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/addQbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Question"
        android:backgroundTint="#2B2525"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
